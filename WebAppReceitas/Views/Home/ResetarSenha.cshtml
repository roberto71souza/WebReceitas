@model WebAppReceitas.Models.ResetarSenhaModel

@{
    ViewData["Title"] = "ResetarSenha";
}

<style>
    main{
        margin-top: 80px;
        margin-bottom: 80px;
    }
</style>

<div class="container signup-form">
    <h2 style="color: white;">Nova Senha</h2>
    <hr style="color: #fff;height: 2px;"/>
        <form asp-action="Confirmacao">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Token" class="form-control" type="hidden"/>
                <input asp-for="Email" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Alterar" class="btns btn btn-primary" />
            </div>
        </form>
        <div>
    <a class="btn btn-warning" asp-action="Login" style="text-decoration: none;">Voltar</a>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
