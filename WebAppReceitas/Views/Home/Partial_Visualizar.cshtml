@model WebAppReceitas.Models.ReceitaModel

@{
    Layout = null;
}
<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Visualizar</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <form>
                @if (Model != null)
                {
                    <div class="form-group">
                        <label asp-for="@Model.Titulo" class="col-form-label">Titulo:</label>
                        <input value="@Model.Titulo" type="text" class="form-control" id="recipient-name" readonly>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Conteudo" class="col-form-label">Conteudo:</label>
                        <textarea class="form-control" id="message-text" readonly>@Model.Conteudo</textarea>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Acessório" class="col-form-label">Acessorios:</label>
                        <input value="@Model.Acessório" type="text" class="form-control" id="recipient-name" readonly>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Data_Publicacao" for="message-text" class="col-form-label"></label>
                        <input value="@Model.Data_Publicacao" class="form-control" id="message-text" readonly>
                    </div>
                }
            </form>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Ok</button>
        </div>
    </div>
</div>
