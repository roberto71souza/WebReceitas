@model LoginModel
@{
}
<style>
    main {
        margin-top: 80px;
    }
</style>

<div class="container signup-form">
    <form asp-action="Login">
        <h2>LOGIN</h2>
        <div asp-validation-summary="ModelOnly" class="p-3 mb-2 bg-success text-white"></div>

        <br>
        <div class="form-group">
            <input type="email" asp-for="UserName" class="form-control" placeholder="Email" required="required">
        </div>

        <div class="form-group">
            <input type="password" asp-for="Password" class="form-control" placeholder="Senha" required="required">
        </div>

        <div class="form-group">
            <button type="submit" class="btns btn btn-primary btn-lg">Entrar</button>
        </div>

        <div class="form-group">
            <a asp-action="EsqueciSenha" class="ForgetPwd text-success">Esqueci a Senha?</a>
            <br>
            <a asp-action="Registrar" class="ForgetPwd">Cadastrar</a>
        </div>
    </form>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
