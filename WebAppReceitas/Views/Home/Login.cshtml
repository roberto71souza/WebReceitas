<style>
    main {
        margin-top: 80px;
    }
</style>
<div class="container signup-form">
    <form>
        <h2>LOGIN</h2>
        <br>
        <div class="form-group">
            <input type="email" class="form-control" placeholder="Email" required="required">
        </div>

        <div class="form-group">
            <input type="password" class="form-control" placeholder="Senha" required="required">
        </div>

        <div class="form-group">
            <button type="submit" asp-action="Perfil" class="btns btn btn-primary btn-lg">Entrar</button>
        </div>

        <div class="form-group">
            <a asp-action="EsqueciSenha" class="ForgetPwd text-success">Esqueci a Senha?</a>
            <br>
            <a asp-action="Registrar" class="ForgetPwd">Cadastrar</a>
        </div>
    </form>
</div>
