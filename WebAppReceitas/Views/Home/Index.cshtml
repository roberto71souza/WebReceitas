                <li><img src="images/pointer.png" title="pointer" /><a href="#">Abril, 2020</a></li>
            </ul>
        </div>
        <div style="border-bottom:none;" class="bloger-grid">

            <div class="bloger-content">

                @if (Model != null)
                {
                    foreach (var modelo in Model)
                    {
                        <h2><a>@modelo.Titulo</a></h2>
