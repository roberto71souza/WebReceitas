@model WebAppReceitas.Models.ReceitaModel

@{
    Layout = null;
}

<style>
    textarea {
        min-height: 200px;
    }
</style>

<form>
    <div class="form-group">
        <label asp-for="@Model.Titulo" class="col-form-label">Titulo:</label>
        <input value="@Model.Titulo" type="text" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Conteudo" class="col-form-label">Conteudo:</label>
        <textarea class="form-control" readonly>@Model.Conteudo</textarea>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Acessório" class="col-form-label">Acessorios:</label>
        <input value="@Model.Acessório" type="text" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Data_Publicacao" for="message-text" class="col-form-label"></label>
        <input value="@Model.Data_Publicacao" class="form-control" readonly>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-outline-light" data-dismiss="modal">Ok</button>
    </div>
</form>