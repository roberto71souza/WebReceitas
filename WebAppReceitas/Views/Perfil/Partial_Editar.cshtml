@using System.Security.Claims
@model WebAppReceitas.Models.ReceitaModel

@{
    Layout = null;
    var id = int.Parse(this.User.FindFirstValue(ClaimTypes.NameIdentifier));
}
<style>
    textarea {
        min-height: 200px;
    }
</style>

<form asp-controller="Perfil" asp-action="Partial_Editar" method="POST">
    <input asp-for="@Model.UsuarioId" value="@id" type="hidden" class="form-control">
    <div class="form-group">
        <label asp-for="@Model.Titulo" class="col-form-label">Titulo:</label>
        <input asp-for="@Model.Titulo" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Conteudo" class="col-form-label">Conteudo:</label>
        <textarea asp-for="@Model.Conteudo" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Acessório" class="col-form-label">Acessorios:</label>
        <input asp-for="@Model.Acessório" type="text" class="form-control">
    </div>
    <div class="form-group">
        <input asp-for="@Model.Data_Publicacao" value="@DateTime.Now.ToString("dd/MM/yyyy")" type="hidden"
            class="form-control">
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-outline-light" data-dismiss="modal">Fechar</button>
        <button type="submit" class="btn btn-light">Atualizar</button>
    </div>
</form>